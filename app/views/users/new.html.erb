<h1>Sign Up!</h1>
 
<%= form_for @user do |f| %>
 <%= f.label :username %>
 <%= f.text_field :username %><br>
  <%= f.label :password %>
 <%= f.password_field :password %><br>
 <%= f.label "Pick a House"%>
 <%= f.collection_select :house_id, House.all, :id, :name %><br>
  <% if flash[:errors] %>
   <ol class="messages">
     <% flash[:errors].each do |error| %>
       <li>
         <%= error %>
       </li>
     <% end %>
   </ol>
 <% end %>
  <%= f.submit %>
<% end %>