<h1>Login</h1>

  <% if flash[:errors] %>
    <%= flash[:errors] %>
  <% end %>

<%= form_for :session, url: "/login" do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Sign In" %>
<% end %>

